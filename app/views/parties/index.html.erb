<ul data-role="listview">
  <% @parties.each do |party| %>
    <li>
      <a href="parties/<%= party.id %>"><span class="ui-li-count" data-theme="b"><%= party.size %></span> <%= party.name %> <%= party.wait %> (<%= number_with_precision(party.wait - (Time.now - party.created_at)/60, :precision => 0) %>)</a>
    </li>
  <% end %>
</ul>
<div data-role="control-group" data-type="horizontal">
  <div class="ui-controlgroup-controls">
    <%= link_to "", new_party_path, :id => 'add', :'data-role' => "button", :'data-icon' => "add", :'data-iconpos' => 'notext', :'data-theme' => 'b' %>
  </div>
</div>